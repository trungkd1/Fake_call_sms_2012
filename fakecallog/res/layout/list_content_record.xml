<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="fill_parent">


	<Button android:text="@string/record_audio" android:id="@+id/button_add"
		android:layout_width="match_parent" 
		android:layout_height="wrap_content" 
		android:drawableRight="@drawable/add"></Button>


	<ListView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/list_content_record" android:layout_width="match_parent"
		android:layout_height="0dip" 
		android:layout_weight="1"/>

	<TextView android:layout_width="match_parent"
		android:layout_height="0dip" 
		android:layout_weight="1"
		android:id="@+id/empty" 
		 android:text="@string/no_audio_found" />

</LinearLayout>
