<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

		<Button android:text="@string/click_record"
			android:layout_height="0dip"
			android:layout_weight="1"
			 android:id="@+id/buttonRecord"
			android:layout_width="match_parent" android:layout_margin="20dip" />


		<LinearLayout android:layout_height="wrap_content"
			android:gravity="center_horizontal" android:layout_width="fill_parent"
			android:orientation="horizontal">
			<Button android:text="@string/play_record"
				android:layout_height="wrap_content" android:layout_margin="10dip"
				android:layout_width="wrap_content" android:id="@+id/buttonPlay"
				android:enabled="false" />
			<Button android:text="@string/save_record"
				android:layout_height="wrap_content" android:layout_margin="10dip"
				android:layout_width="wrap_content" android:id="@+id/buttonSave"
				android:enabled="false" />
			<Button android:text="@string/cancel_record"
				android:layout_height="wrap_content" android:layout_margin="10dip"
				android:layout_width="wrap_content" android:id="@+id/buttonCancel2" />
		</LinearLayout>
</LinearLayout>
